<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Simulador de Investimentos</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 30px; }
    label { display: block; margin-top: 10px; }
    input, select { padding: 5px; margin-top: 5px; }
    button { margin-top: 15px; padding: 10px; cursor: pointer; }
    .resultado { margin-top: 20px; font-size: 18px; font-weight: bold; }
  </style>
</head>
<body>

  <h2>Simule seu Investimento</h2>

  <label>Valor do Investimento (R$):</label>
  <input type="number" id="valor" placeholder="Ex: 1000" step="0.01">

  <label>Prazo:</label>
  <input type="number" id="tempo" placeholder="Ex: 12">
  <select id="tipoTempo">
    <option value="meses">Meses</option>
    <option value="anos">Anos</option>
  </select>

  <label>Taxa de Juros (%):</label>
  <input type="number" id="juros" placeholder="Ex: 1.5" step="0.01">
  <select id="tipoJuros">
    <option value="mes">ao m√™s</option>
    <option value="ano">ao ano</option>
  </select>

  <button onclick="simular()">Calcular</button>

  <div class="resultado" id="resultado"></div>

  <script>
    function simular() {
      let valor = parseFloat(document.getElementById("valor").value);
      let tempo = parseInt(document.getElementById("tempo").value);
      let tipoTempo = document.getElementById("tipoTempo").value;
      let juros = parseFloat(document.getElementById("juros").value) / 100;
      let tipoJuros = document.getElementById("tipoJuros").value;

      if (isNaN(valor) || isNaN(tempo) || isNaN(juros)) {
        document.getElementById("resultado").innerHTML = "‚ö†Ô∏è Preencha todos os campos corretamente.";
        return;
      }

      // Ajuste do tempo
      if (tipoTempo === "anos") {
        tempo = tempo * 12; // converte anos para meses
      }

      // Ajuste da taxa de juros
      if (tipoJuros === "ano") {
        juros = juros / 12; // converte juros anual para mensal
      }

      // F√≥rmula de juros compostos: M = C * (1 + i)^t
      let montante = valor * Math.pow((1 + juros), tempo);
      let rendimento = montante - valor;

      document.getElementById("resultado").innerHTML =
        `üí∞ Valor Final: R$ ${montante.toFixed(2)} <br>
         üìà Rendimento: R$ ${rendimento.toFixed(2)} `;
    }
  </script>

</body>
</html>
